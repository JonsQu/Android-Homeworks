<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainTable">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Tic Tac Toe!! First press is X"
        android:textAlignment="center"
        android:textColor="@color/justRead"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableRow
        android:id="@+id/row1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/row11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="gameButtonClick"
            android:padding="0dp"
            android:clickable="true"
            android:textSize="70dp"
            />
        <Button
            android:id="@+id/row12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="gameButtonClick"
            android:padding="0dp"
            android:clickable="true"
            android:textSize="70dp"
            />
        <Button
            android:id="@+id/row13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="gameButtonClick"
            android:padding="0dp"
            android:clickable="true"
            android:textSize="70dp"
            />
    </TableRow>
    <TableRow
        android:id="@+id/row2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/row21"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="gameButtonClick"
            android:padding="0dp"
            android:clickable="true"
            android:textSize="70dp"
            />
        <Button
            android:id="@+id/row22"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="gameButtonClick"
            android:padding="0dp"
            android:clickable="true"
            android:textSize="70dp"
            />
        <Button
            android:id="@+id/row23"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="gameButtonClick"
            android:padding="0dp"
            android:clickable="true"
            android:textSize="70dp"
            />
    </TableRow>
    <TableRow
        android:id="@+id/row3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/row31"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="gameButtonClick"
            android:padding="0dp"
            android:clickable="true"
            android:textSize="70dp"
            />
        <Button
            android:id="@+id/row32"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="gameButtonClick"
            android:padding="0dp"
            android:clickable="true"
            android:textSize="70dp"
            />
        <Button
            android:id="@+id/row33"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="gameButtonClick"
            android:padding="0dp"
            android:clickable="true"
            android:textSize="70dp"
            />
    </TableRow>
    <Button
        android:id="@+id/clear"
        android:textAlignment="center"
        android:text="Clear The Game"
        android:onClick="clearGame"
        android:textColor="@color/justRead"/>
</TableLayout>